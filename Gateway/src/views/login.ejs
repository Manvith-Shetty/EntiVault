<%- include("partials/header.ejs") %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Welcome back!</h1>
  <h6 class="text-center mb-4">Get your popcorn ready â€“ Login time!</h6>
  <form action="/users/login" method="POST" class="needs-validation" novalidate>
    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label">Email:</label>
      <div class="col-sm-10">
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          required
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="password" class="col-sm-2 col-form-label">Password:</label>
      <div class="col-sm-10">
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        />
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <a href="/users/register" class="btn btn-link">New here? Register</a>
      </div>
    </div>
  </form>
  <ul class="list-unstyled mt-4">
    <% if(messages.success_msg) { %>
    <li class="text-success"><%= messages.success_msg %></li>
    <% } %>
  </ul>
  <ul class="list-unstyled mt-4">
    <% if(messages.error) { %>
    <li class="text-danger"><%= messages.error %></li>
    <% } %>
  </ul>
</div>
<br />
<%- include("partials/footer.ejs") %>
