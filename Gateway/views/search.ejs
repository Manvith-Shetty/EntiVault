<%- include("partials/header.ejs") %> <% if (results) { %>
<h2>Search Results</h2>
<ol>
  <% results.forEach(anime => { %>
  <hr />
  <div class="anime-item">
    <img
      src="<%= anime.image %>"
      alt="<%= anime.title %> Cover"
      class="anime-image"
    />
    <div class="anime-info">
      <a href="/anime/<%= anime.id %>"><%= anime.title %></a>
      <p><%= anime.type %> (<%= anime.episodes %> eps)</p>
      <p>Scored <%= anime.rating %></p>
      <p><%= anime.members %> members</p>
    </div>
  </div>
  <% }) %>
  <hr />
</ol>
<% } else if (searchTerm) { %>
<p>No results found for your search.</p>
<% } %>
